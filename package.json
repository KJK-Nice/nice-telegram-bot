{
  "name": "telegramCmcBot",
  "version": "1.0.0",
  "description": "service telegram bot coinmarketcap",
  "main": "app.mjs",
  "scripts": {
    "dev": "nodemon --exec node --experimental-json-modules app.mjs",
    "build": "rimraf dist/ && babel ./ --out-dir dist/ --ignore ./node_modules,./.babelrc,./package.json,./npm-debug.log,./deployment.yml,./dev.Dockerfile,./docker-compose.yml,./Dockerfile,./package-lock.json,./README.md --copy-files",
    "start": "nodemon --exec node --experimental-json-modules app.mjs",
    "start:development": "NODE_ENV=production ENV=development node --max-old-space-size=4096 --experimental-modules --experimental-json-modules dist/app.mjs",
    "start:test": "NODE_ENV=production ENV=test node --max-old-space-size=4096 --experimental-modules --experimental-json-modules dist/app.mjs",
    "start:staging": "NODE_ENV=production ENV=staging node --max-old-space-size=4096 --experimental-modules --experimental-json-modules dist/app.mjs",
    "start:production": "NODE_ENV=production ENV=production node --max-old-space-size=4096 --experimental-modules --experimental-json-modules dist/app.mjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "type": "module",
  "dependencies": {
    "node-telegram-bot-api": "^0.53.0",
    "nodemon": "^2.0.7"
  }
}
